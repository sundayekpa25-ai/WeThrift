{
  "name": "wethrift",
  "version": "1.0.0",
  "description": "USSD-Centric Thrift Group Contribution Platform with Dynamic Financial Products",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > types/supabase.ts",
    "db:reset": "supabase db reset",
    "db:seed": "tsx scripts/seed.ts",
    "mobile:ios": "cd mobile && npx react-native run-ios",
    "mobile:android": "cd mobile && npx react-native run-android",
    "mobile:build:ios": "cd mobile && npx react-native build-ios",
    "mobile:build:android": "cd mobile && npx react-native build-android"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@supabase/supabase-js": "^2.38.5",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.294.0",
    "react-hook-form": "^7.48.2",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.4.7",
    "recharts": "^2.8.0",
    "react-table": "^7.8.0",
    "@tanstack/react-table": "^8.10.7",
    "axios": "^1.6.2",
    "jose": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "nodemailer": "^6.9.7",
    "@types/nodemailer": "^6.4.14",
    "twilio": "^4.19.0",
    "qrcode": "^1.5.3",
    "@types/qrcode": "^1.5.5",
    "sharp": "^0.33.1",
    "multer": "^1.4.5-lts.1",
    "@types/multer": "^1.4.11",
    "express": "^4.18.2",
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.17",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "@types/uuid": "^9.0.7",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "crypto-js": "^4.2.0",
    "@types/crypto-js": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.8",
    "tsx": "^4.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
